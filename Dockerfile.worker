# Dockerfile for Worker service (GPU required)
FROM pytorch/pytorch:2.5.1-cuda12.4-cudnn9-runtime

WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl \
    git \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements
COPY requirements.txt .

# Install doc-classifier from local path (assumes mounted or copied)
# For now, install from PyPI or skip if not available
RUN pip install --no-cache-dir \
    "transformers>=4.49.0,<5.0.0" \
    "accelerate>=0.26.0" \
    "qwen-vl-utils>=0.0.8" \
    "pydantic>=2.0.0" \
    "pydantic-settings>=2.0.0" \
    "python-dotenv>=1.0.0" \
    "fastapi>=0.109.0" \
    "uvicorn>=0.27.0" \
    "python-multipart>=0.0.9" \
    "structlog>=24.0.0" \
    "prometheus-client>=0.20.0" \
    "asyncpg>=0.29.0" \
    "pillow>=10.0.0" \
    "pillow-heif>=0.16.0" \
    "redis[hiredis]>=5.0.0" \
    "httpx>=0.27.0"

# Copy application code
COPY worker.py .
COPY doc_pipeline/ ./doc_pipeline/
COPY entrypoint-worker.sh /entrypoint.sh

# Make entrypoint executable
RUN chmod +x /entrypoint.sh

# Create directories
RUN mkdir -p /tmp/doc-pipeline /app/models

# Environment variables
ENV PYTHONUNBUFFERED=1
ENV DOC_PIPELINE_LOG_JSON=true
ENV DOC_PIPELINE_WARMUP_ON_START=true
ENV DOC_PIPELINE_WORKER_HEALTH_PORT=9010

# Expose health check port
EXPOSE 9010

# Health check with longer start period for model loading
HEALTHCHECK --interval=30s --timeout=10s --start-period=180s --retries=3 \
    CMD curl -f http://localhost:9010/health || exit 1

ENTRYPOINT ["/entrypoint.sh"]
